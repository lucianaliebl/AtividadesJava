package br.com.luciana.main;

import br.com.luciana.animal.Cachorro;
import br.com.luciana.animal.Gato;
import br.com.luciana.animal.Passaro;

public class Main {

	public static void main(String[] args) {
		
		Cachorro objCachorro = new Cachorro("Toto", 7, "caramelo", "Curto");
		
		objCachorro.imprimirInformacoes();
		objCachorro.farejar();
		objCachorro.fazerSom();
		
		System.out.println("=============");
		
		Gato objGato = new Gato("Fred", 2, "SRD", "cinza");
		
		objGato.imprimirInformacoes();
		objGato.pegarRato();
		objGato.fazerSom();
		
		System.out.println("=============");
		
		Passaro objPassaro = new Passaro ("Plim", 1, "can√°rio", "pena curta", "bico curto");
		
		objPassaro.imprimirInformacoes();
		objPassaro.voar();
		objPassaro.fazerSom();
		
	}

}
